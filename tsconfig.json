{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@m-design/mui": ["components/index.tsx"],
      "@m-design/mui/es/*": ["components/*"]
    },
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "types": [
      "node",
      "./typings"
    ]
  },
  "include": ["components/**/*.ts", "components/**/*.tsx"],
  "exclude": ["node_modules", "lib", "es", "components/**/*.test.tsx", "components/**/*.test.ts"]
}